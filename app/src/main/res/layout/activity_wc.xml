<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange_medium"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/dark_bg_img"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/wc_image_large"
            app:srcCompat="@drawable/ic_launcher_background"
            android:contentDescription="Current WC Image"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp"
            android:id="@+id/wc_like_large"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:contentDescription="Heart Icon"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wc_name_str"
            android:textSize="30sp"
            android:id="@+id/wc_name_large"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="@string/wc_desc_str"
            android:textSize="22sp"
            android:id="@+id/wc_desc_large"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_edittext"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="96px"
                    android:layout_height="96px"
                    app:srcCompat="@drawable/ic_layers_black_24dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/wc_floor_str"
                    android:id="@+id/wc_current_floor"
                    android:background="@drawable/bg_edittext"
                    android:padding="10dp"
                    android:textAlignment="center"
                    />

            </LinearLayout><LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="floor number"
                    android:textColor="@color/cardview_dark_background"
                    android:background="@drawable/bg_edittext"
                    android:padding="10dp"
                    android:textAlignment="center"
                    />

            </LinearLayout><LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="floor number"
                    android:textColor="@color/cardview_dark_background"
                    android:background="@drawable/bg_edittext"
                    android:padding="10dp"
                    android:textAlignment="center"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>






</LinearLayout>