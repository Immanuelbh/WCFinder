<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:elevation="50dp"
    app:cardCornerRadius="10dp"
    android:background="@color/orange_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="@color/orange_light"
        android:id="@+id/card_layout"
        >

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="start|fill_horizontal"
            android:id="@+id/wc_card_img"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingStart="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="WC Name"
                    android:id="@+id/wc_card_name"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10px"
                    android:layout_marginTop="10px"
                    />

                <ImageButton
                    android:id="@+id/wc_card_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:background="@android:color/transparent"
                    android:layout_margin="20px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wc_card_desc"
                    android:layout_below="@id/wc_card_name"
                    android:text="WC Description"
                    android:textSize="15sp"
                    android:layout_marginStart="10px"
                    android:layout_marginTop="10px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Floor number"
                    android:id="@+id/wc_card_floor"
                    android:layout_below="@id/wc_card_desc"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10px"
                    android:layout_marginBottom="10px"

                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>