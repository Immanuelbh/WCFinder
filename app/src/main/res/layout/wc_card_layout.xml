<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:elevation="30dp"
    app:cardCornerRadius="10dp"
    android:background="@color/orange_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="@color/orange_light"
        android:id="@+id/card_layout"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="start|fill_horizontal"
                android:id="@+id/wc_card_img"/>
            <ImageButton
                android:id="@+id/wc_card_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingStart="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="@string/wc_name_str"
                    android:id="@+id/wc_card_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wc_card_desc"
                    android:layout_below="@id/wc_card_name"
                    android:text="@string/wc_desc_str"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    />







                <TextView
                    android:id="@+id/wc_card_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/wc_floor_str"
                    android:textSize="20sp"
                    android:visibility="gone"
                    />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:rating="3.5"
                    android:max="5"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>