<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewWc"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorAccent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/wc_new_img"
            />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_photo_camera_black_24dp"
            android:id="@+id/first_pic_btn"

            />
        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/wc_new_img"
            android:background="@drawable/ic_add_a_photo_black_24dp"
            android:visibility="gone"
            android:id="@+id/add_pic_btn"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Name of WC"
                android:textSize="22dp"
                android:layout_weight="4"
                android:focusedByDefault="false"
                android:id="@+id/wc_new_name"
                android:paddingStart="25px"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Floor"
                android:layout_weight="1"
                android:focusedByDefault="false"
                android:id="@+id/wc_new_floor"
                android:inputType="number"
                android:textAlignment="center"
                />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:hint="Give a few details on the WC you want to add."
            android:gravity="start|top"
            android:scrollbars="vertical"
            android:focusedByDefault="false"
            android:id="@+id/wc_new_desc"
            android:background="@color/orange_lighter"
            android:padding="25px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@color/orange_lighter"
            >
            <ImageView
                android:layout_width="96px"
                android:layout_height="96px"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:background="@android:color/transparent"
                />
        </LinearLayout>

        <Button
            android:id="@+id/save_wc_btn"

            android:text="SAVE"
            android:textColor="#000000"
            android:textSize="30sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape_selector"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center"
            android:layout_marginTop="50px"
            />

    </LinearLayout>




</LinearLayout>